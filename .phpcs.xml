<?xml version="1.0"?>
<ruleset name="DiaStandard">
    <description>Dia PHP Coding Standard</description>
    <rule ref="PSR12" />
    <exclude-pattern>.phan/config.php</exclude-pattern>
    <exclude-pattern>*.blade.php</exclude-pattern>
    <rule ref="PSR1.Files.SideEffects.FoundWithSymbols">
        <exclude-pattern>public/index.php</exclude-pattern>
    </rule>
    <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
        <exclude-pattern>database/migrations/*.php</exclude-pattern>
        <exclude-pattern>database/seeds/DatabaseSeeder.php</exclude-pattern>
    </rule>
</ruleset>
